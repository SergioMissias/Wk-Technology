unit untProcuraCliente;


interface

   uses System.SysUtils, untClassClientepas;


    type

    TProcCliente = class(Tcliente)
    private

    public


    function ProcuraCliente(ocod : integer):boolean;

    End;

implementation



{ TProcCliente }

uses unDmWkTeste;

function TProcCliente.ProcuraCliente(ocod: integer): boolean;
var
 oCliente:TCliente;
begin
 oCliente:=TCliente.Create;
   with dmWkTeste.fdqCliente do
   begin
      close;
      sql.Clear;
      sql.Add('Select Codigo,Nome,Cidade, UF from Cliente where Codigo=:oCod');
      ParamByName('oCod').AsInteger:=ocod;
      ExecSQL;
      if RecordCount>0 then
      begin
          oCliente.Nome:=FieldByName('Nome').AsString;
          oCliente.Cidade:=FieldByName('Cidade').AsString;
          oCliente.UF:=FieldByName('UF').AsString;
          oCliente.Codigo:=FieldByName('Codigo').AsInteger;
          result:=true;
      end
      else
         result:=false;
   end;

end;

end.
